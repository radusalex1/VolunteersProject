@model IEnumerable<VolunteersProject.Models.Enrollment>

@{
    ViewData["Title"] = "Index";
}

<h1>View Volunteer per Event</h1>

@*<p>
    <a asp-action="Create">Create</a>
</p>*@

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["contributionSortParam"]">@Html.DisplayNameFor(model => model.contribution)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParam"]"> @Html.DisplayNameFor(model => model.volunteer)</a>
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.contribution.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.volunteer.FullName)
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.EnrollmentID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
